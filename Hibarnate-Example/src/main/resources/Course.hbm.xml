<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "example.entity.Course" table = "Course_Master">
      
      <id name = "courseid" type = "string" column = "course_id"/>
      
      <property name = "coursename" column = "course_name" type = "string"/>
      <property name = "duration" column = "course_duration" type = "int"/>
      <property name = "fees" column = "course_fees" type = "int"/>
      
   </class>
</hibernate-mapping>